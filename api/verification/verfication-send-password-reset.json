{
  "id": "verification-send-password-reset",
  "title": "비밀번호 재설정용 인증번호 전송",
  "description": "비밀번호 재설정을 위해 이메일 또는 휴대폰으로 인증번호를 전송합니다.",
  "method": "POST",
  "endpoint": "/api/verification/code/reset-password",
  "headers": [
    {
      "name": "Content-Type",
      "value": "application/json",
      "required": true,
      "description": "요청 본문 JSON"
    }
  ],
  "parameters": [],
  "requestExample": {
    "target": "user@example.com",
    "isEmail": true
  },
  "responses": [
    {
      "status": "200 OK",
      "description": "인증번호 전송 완료"
    },
    {
      "status": "400 Bad Request",
      "description": "해당 이메일로 가입된 회원이 없습니다."
    },
    {
      "status": "400 Bad Request",
      "description": "인증번호는 1분 뒤에 재전송 가능합니다."
    }
  ],
  "responseExample": {
    "success": true,
    "message": "인증번호 전송 완료"
  },
  "curlExample": "curl -X POST 'https://api.banklab.app/api/verification/code/reset-password' -H 'Content-Type: application/json' -d '{\"target\":\"user@example.com\",\"isEmail\":true}'"
}
